/* pages/order/order.wxss */

.order-container {
    width: 100vw;
    min-height: 100vh;
    background-color: #F9B84F;
    padding: 5vh 0;
    box-sizing: border-box;
}

.order {
    width: 532rpx;
    margin: 0 auto;
    background-image: linear-gradient(#ffffff, #FADFAD);
}

.order-header {
    position: relative;
    width: 100%;
    height: 25vh;
    padding: 6vh 66rpx 30rpx;
    box-sizing: border-box;
}

.corner {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    background-color: #F9B84F;
    border-radius: 50%;
}

.corner2 {
    top: -30rpx;
    left: 50%;
    transform: translateX(-50%);
}

.corner1 {
    top: -30rpx;
    left: -30rpx;
}

.corner3 {
    top: -30rpx;
    right: -30rpx;
}

.order-header .title1 {
    display: block;
    width: 403rpx;
    height: 62rpx;
    margin: 0 auto;
}

.order-header .title2 {
    display: block;
    width: 400rpx;
    height: 50rpx;
    margin: 6vh auto 0;
    padding-bottom: 30rpx;
    border-bottom: 2px solid #747474;
}

.order-body {
    padding-top: 80rpx;
    min-height: 50vh;
    box-sizing: border-box;
}

.order-body .order-item {
    text-align: center;
    line-height: 2;
    font-size: 40rpx;
}

.order-footer {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    height: 15vh;
}

.corner4 {
    left: -30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.corner5 {
    right: -30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.order-footer .date {
    font-size: 24rpx;
}

.order-footer .ok {
    font-weight: bold;
}
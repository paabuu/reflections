/* pages/shopping_cart/shopping_cart.wxss */
.header-shopping-cart {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}
.header-shopping-cart image {
    width: 54rpx;
    height: 54rpx;
}

.ordered-list {
    background-color: #efefef;
    padding-top: 4rpx;
    overflow: hidden;
    height: 71vh;
    margin-top: 14vh;
}

.ordered-list-item {
    display: flex;
    justify-content: space-between;
    width: 100vw;
    height: 132rpx;
    margin-bottom: 4rpx;
}

.food-image image{
    width: 132rpx;
    height: 132rpx;
}

.food-info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    padding: 15rpx 20rpx 15rpx 44rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.food-info-name {
    font-weight: bold;
    font-size: 34rpx;
    margin-bottom: 10rpx;
    letter-spacing: 5rpx;
}

.food-info-price {
    color: #F04A4A;
    font-size: 28rpx;
    font-weight: bold;
    letter-spacing: 3rpx;
}

.food-info-bottom {
    display: flex;
    justify-content: space-between;
    width: 100%;
}


.food-operation {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.food-operation-button {
    width: 68rpx;
    height: 50rpx;
    text-align: center;
    float: right;
}

.text-verticle-center {
    line-height: 54rpx;
    font-size: 30rpx;
}

.food-operation image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.bg-red {
    background-color: #FF5F00;
    color: #fff;
    border-radius: 8rpx;
}

.bg-trans {
    color: #FF5F00;
}

.summary {
    position: fixed;
    bottom: 10vh;
    width: 100vw;
    height: 6vh;
    text-align: right;
    font-weight: bold;
    font-size: 28rpx;
    line-height: 2.5;
    letter-spacing: 5rpx;
    padding-right: 22rpx;
    box-sizing: border-box;
    border-top: 4rpx solid #efefef;
    background-color: #fff;
}

.summary-num {
    color: #F04A4A;
}

.xiadan {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 10vh;
    background-color: #F7C0A8 ;
    color: #fff;
}
/* components/header/header.wxss */
.app-header {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    padding-top: 22rpx;
    box-sizing: border-box;
}

.back-arrow {
    position: absolute;
    left: 22rpx;
    top: 50%;
    transform: translateY(-50%);
    margin-top: 11rpx;
    width: 40rpx;
    height: 40rpx;
}

.back-arrow image {
    width: 100%;
    height: 100%;
}

.app-header-text {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    line-height: 1;
    color: #fff;
    font-weight: bold;
}

.app-header-slot {
    width: 100%;
    height: 100%;
}
